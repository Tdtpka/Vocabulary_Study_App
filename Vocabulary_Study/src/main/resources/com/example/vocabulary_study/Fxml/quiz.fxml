<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="600" prefHeight="400" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vocabulary_study.Controllers.QuizResultController">
    <children>
        <Label fx:id="questionLabel" layoutX="50" layoutY="50" text="Câu hỏi sẽ hiển thị ở đây" wrapText="true"/>
        
        <VBox layoutX="50" layoutY="100" spacing="10">
            <children>
                <RadioButton fx:id="option1" text="Đáp án 1"/>
                <RadioButton fx:id="option2" text="Đáp án 2"/>
                <RadioButton fx:id="option3" text="Đáp án 3"/>
            </children>
        </VBox>
        
        <Button fx:id="nextButton" layoutX="50" layoutY="250" text="Tiếp tục"/>
        <Label fx:id="resultLabel" layoutX="50" layoutY="300" text="Kết quả sẽ hiển thị ở đây" visible="false"/>
        
        <VBox layoutX="50" layoutY="350" spacing="10" visible="false">
            <children>
                <Label fx:id="scoreLabel" text="Điểm số:"/>
                <Label fx:id="timeLabel" text="Thời gian làm bài:"/>
                <ListView fx:id="correctList" prefHeight="100"/>
                <ListView fx:id="incorrectList" prefHeight="100"/>
                <Button fx:id="retryButton" text="Làm lại" visible="false"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
